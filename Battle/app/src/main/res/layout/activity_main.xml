<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:paddingStart="30dp"
        android:columnCount="2"
        android:rowCount="3">
        <TextView
            android:text="player"
            android:textSize="40sp"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_columnSpan="2"
            android:layout_gravity="fill_horizontal"/>
        <ImageView
            android:src="@drawable/ash_ketchum"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_marginEnd="10dp"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_rowSpan="2"
            android:layout_gravity="fill_vertical"/>
        <TextView
            android:text="17101226"
            android:textSize="30sp"
            android:layout_column="1"
            android:layout_row="1" />
        <TextView
            android:text="이민하"
            android:textSize="30sp"
            android:layout_column="1"
            android:layout_row="2" />
    </GridLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="vertical" >
        <ImageView
            android:src="@drawable/battle"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="#F5CC1E" >
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight="3"
            android:layout_gravity="center">
            <Button
                android:id="@+id/baseBtn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"/>
            <Button
                android:layout_width="40dp"
                android:layout_height="70dp"
                android:layout_above="@+id/baseBtn"
                android:layout_alignLeft="@+id/baseBtn"
                android:layout_centerHorizontal="true"/>
            <Button
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_toLeftOf="@+id/baseBtn"
                android:layout_alignBaseline="@+id/baseBtn"/>
            <Button
                android:layout_width="70dp"
                android:layout_height="40dp"
                android:layout_toRightOf="@+id/baseBtn"
                android:layout_alignBaseline="@+id/baseBtn"/>
            <Button
                android:layout_width="40dp"
                android:layout_height="70dp"
                android:layout_below="@+id/baseBtn"
                android:layout_alignLeft="@+id/baseBtn"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:padding="10dp">
            <Button
                android:id="@+id/baseBtn2"
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_marginBottom="5dp"/>
            <Button
                android:layout_width="60dp"
                android:layout_height="70dp"
                android:layout_below="@+id/baseBtn2"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>